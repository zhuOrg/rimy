<div class="row">
    <div class="col">
        <h2>Send Invite</h2>
    </div>
</div>

<%= form_with url: send_invite_team_path, local: true do |f| %>
    <div class="form-row">
        <div class="form-group col-md-4">
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control" %>
            <small class="form-text text-muted">Registered user only</small>
        </div>
        <div class="form-group col-md-2">
            <div class="inline-form-submit">
                <%= f.submit "Send", class: "btn btn-primary" %>
            </div>
        </div>
    </div>
<% end%>

<div class="row">
    <div class="col">
        <hr>
        <h2>Sent Invites</h2>
    </div>
</div>

<div class="row">
    <div class="col">
        <% if @invites %>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Token</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% @invites.each do |invite| %>
                        <tr>
                            <td><%= invite.id %></td>
                            <td><%= invite.user.email %></td>
                            <td><%= invite.invite_token %></td>
                            <td><%= invite.status.capitalize %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        <% end %>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="float-right">
            <%= pagy_bootstrap_nav(@pagy).html_safe %>
        </div>
    </div>
</div>
