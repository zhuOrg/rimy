<div class="row">
    <div class="col">
        <h2>Join Team</h2>
    </div>
</div>

<%= form_with url: confirm_join_teams_path, local: true do |f| %>
    <div class="form-row">
        <div class="form-group col-md-4">
            <%= f.label :invite_token %>
            <%= f.text_field :invite_token, class: "form-control" %>
        </div>
        <div class="form-group col-md-2">
            <div class="inline-form-submit">
                <%= f.submit "Join", class: "btn btn-primary" %>
            </div>
        </div>
    </div>
<% end%>
