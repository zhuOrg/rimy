<h2><%= "Add #{account_type(@account_type)} Account" %></h2>
<% if @available.size > 0 %>
    <%= form_with url: polymorphic_path([@accountable, Account]), local: true do |f| %>
        <div class="form-row">
            <div class="form-group col-md-4">
                <%= f.label :asset_id %>
                <%= f.select :asset_id, available_assets_grouped_options(@available), {prompt: 'Please select'}, class: 'custom-select' %>
            </div>
            <div class="form-group col-md-2">
                <div class="inline-form-submit">
                    <%= f.submit "Send", class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    <% end %>
<% else %>
    <p>You have added all available assets into this account</p>
<% end %>
